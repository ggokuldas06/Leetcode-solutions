class Solution {
public:
    int lcs(string& a,string& b){
        int n=a.size();
        vector<vector<int>>dp(n+1,vector<int>(n+1,0));
        for(int i=n-1;i>=0;i--){
            for(int j=n-1;j>=0;j--){
                if(a[i]==b[j]){
                    dp[i][j]=1+dp[i+1][j+1];
                }else{
                    dp[i][j]=max(dp[i+1][j],dp[i][j+1]);
                }
            }
        }
        return dp[0][0];
    }
    int minInsertions(string s) {
        int n=s.size();
        string s2=s;
        reverse(s2.begin(),s2.end());
        int x=lcs(s,s2);
        return n-x;
    }
};
