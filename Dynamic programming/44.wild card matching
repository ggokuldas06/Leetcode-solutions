class Solution {
public:
    bool helper(string& s,string& p,int n,int m,int i,int j,vector<vector<int>>& dp){
        if(j==m){
            return i==n;
        }
        if(i==n){
            for(int k=j;k<m;k++){
                if(p[k]!='*')return false;
            }return true;
        }
        if(dp[i][j]!=-1)return dp[i][j];
        bool ans=false;
        if(s[i]==p[j]){
            ans= helper(s,p,n,m,i+1,j+1,dp);
        }else{
            if(p[j]=='?'){
                ans= helper(s,p,n,m,i+1,j+1,dp);
            }else if(p[j]=='*'){
                ans= helper(s,p,n,m,i+1,j,dp) || helper(s,p,n,m,i,j+1,dp);
            }else{
                ans= false;
            }
        }
        dp[i][j]=ans;
        return ans;
    }
    bool isMatch(string s, string p) {
        int n=s.size();
        int m=p.size();
        vector<vector<int>>dp(n+1,vector<int>(m+1,-1));
        return helper(s,p,n,m,0,0,dp);
    }
};
