class Solution {
public:
    int minFallingPathSum(vector<vector<int>>& matrix) {
        int n=matrix.size(),m=matrix[0].size();
        vector<vector<int>>dp(n,vector<int>(m,0));
        for(int j=0;j<m;j++){
            dp[0][j]=matrix[0][j];
        }
        for(int i=1;i<n;i++){
            for(int j=0;j<m;j++){
                int minPrev = INT_MAX;
                for (int k = 0; k < m; k++) {
                    if (k == j) continue;
                    minPrev = min(minPrev, dp[i - 1][k]);
                }
                dp[i][j] = matrix[i][j] + minPrev;
            }
        }
        int result = INT_MAX;
        for (int j = 0; j < m; j++) {
            result = min(result, dp[n - 1][j]);
        }

        return result;
    }
};
