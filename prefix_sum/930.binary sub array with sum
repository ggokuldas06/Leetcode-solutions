class Solution {
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        unordered_map<int,int>hash;
        int count=0;
        int curr=0;
        hash[0]=1;
        for(int i=0;i<nums.size();i++){
            curr+=nums[i];
            int rem=curr-goal;
            count+=hash[rem];
            hash[curr]++;
        }
        return count;
    }
};
