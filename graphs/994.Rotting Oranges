class Solution {
public:
    int orangesRotting(vector<vector<int>>& grid) {
        int n=grid.size();
        int m=grid[0].size();
        int fresh=0,minute=0;
        queue<pair<int,int>>mg;
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(grid[i][j]==2){
                    mg.push({i,j});
                }else if(grid[i][j]==1){
                    fresh++;
                }
            }
        }
        if(fresh==0)return 0;
        vector<pair<int,int>>dirs={{1,0},{0,1},{-1,0},{0,-1}};
        while(!mg.empty()){
            int sz=mg.size();
            bool changed=false;
            while(sz--){
                auto [x,y]=mg.front();mg.pop();
                for(auto [dx,dy]:dirs){
                    int nx=x+dx;
                    int ny=y+dy;
                    if (nx>=0 && nx<n && ny>=0 && ny<m && grid[nx][ny]==1) {
                        grid[nx][ny] = 2;
                        fresh--;
                        changed = true;
                        mg.push({nx, ny});
                    }
                }
            }
            if(changed)minute++;
        }
        if(fresh==0){
            return minute;
        }
        return -1;
    }
};
