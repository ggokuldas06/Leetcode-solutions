class Solution {
public:

    void pushBorder(int i, int j,
                    vector<vector<char>>& board,
                    queue<pair<int,int>>& q) {

        if (board[i][j] == 'O') {
            board[i][j] = '#';
            q.push({i, j});
        }
    }

    void solve(vector<vector<char>>& board) {
        int m = board.size();
        int n = board[0].size();

        queue<pair<int,int>> q;


        for (int i = 0; i < m; i++) {
            pushBorder(i, 0, board, q);
            pushBorder(i, n-1, board, q);
        }

        for (int j = 0; j < n; j++) {
            pushBorder(0, j, board, q);
            pushBorder(m-1, j, board, q);
        }


        vector<vector<int>> dirs = {{1,0},{-1,0},{0,1},{0,-1}};

        while (!q.empty()) {
            auto [x, y] = q.front();
            q.pop();

            for (auto &d : dirs) {
                int nx = x + d[0];
                int ny = y + d[1];

                if (nx >= 0 && ny >= 0 && nx < m && ny < n
                    && board[nx][ny] == 'O') {

                    board[nx][ny] = '#';
                    q.push({nx, ny});
                }
            }
        }

        
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (board[i][j] == 'O') board[i][j] = 'X';
                else if (board[i][j] == '#') board[i][j] = 'O';
            }
        }
    }
};
