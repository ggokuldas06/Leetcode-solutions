class Solution {
public:
vector<int> helper(int n, vector<vector<int>>& arr) {
        vector<int>nums;
        vector<vector<int>>graph(n,vector<int>(n,0));
        vector<int>indeg(n,0);
        for(vector<int>& curr:arr){
            int x=curr[0];
            int y=curr[1];
            graph[y][x]=1;
            indeg[x]++;
        }
        queue<int>q;
        for(int i=0;i<n;i++){
            if(indeg[i]==0){
                q.push(i);
            }
        }
        int taken=0;
        while(!q.empty()){
            int curr=q.front();
            q.pop();
            nums.push_back(curr);
            taken++;
            for(int i=0;i<n;i++){
                if(graph[curr][i]){
                    indeg[i]--;
                    if(indeg[i]==0){
                        q.push(i);
                    }
                }
            }
        }
        if(taken==n) return nums;
        nums={};
        return nums;
    }
    vector<int> findOrder(int n, vector<vector<int>>& arr) {
        return helper(n,arr);
    }

};
